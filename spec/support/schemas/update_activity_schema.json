{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "properties": {
    "actor_type": {
      "type": "string"
    },
    "actor_id": {
      "type": "integer"
    },
    "action": {
      "type": "string"
    },
    "actor_display_name": {
      "type": "string"
    },
    "record_display_name": {
      "type": "string"
    },
    "payloads": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "relation": {
            "type": "string",
            "enum": [
              "self",
              "has_one",
              "belongs_to",
              "has_many"
            ]
          },
          "record_type": {
            "type": "string"
          },
          "record_id": {
            "type": "integer"
          },
          "attrs": {
            "anyOf": [
              {
                "type": "object",
                "patternProperties": {
                  "^.*$": {
                    "anyOf": [
                      {
                        "type": "string"
                      },
                      {
                        "type": "number"
                      },
                      {
                        "type": "array"
                      },
                      {
                        "type": "boolean"
                      },
                      {
                        "type": "null"
                      }
                    ]
                  }
                },
                "additionalProperties": true
              },
              {
                "type": "array",
                "items": {
                  "type": "object",
                  "patternProperties": {
                    "^.*$": { // Wildcard for any property name
                      "type": "object",
                      "properties": {
                        "from": {
                          "type": "string"
                        },
                        "to": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "from",
                        "to"
                      ],
                      "additionalProperties": false
                    }
                  },
                  "additionalProperties": true // Allows for other properties not matched by patternProperties
                }
              }
            ]
          },
          "route": {
            "type": "string"
          },
          "record_display_name": {
            "type": "string"
          },
          "current_payload": {
            "type": "boolean"
          },
          "data_owner": {
            "type": [
              "boolean",
              "null"
            ]
          }
        },
        "required": [
          "relation",
          "record_type",
          "record_id",
          "attrs",
          "route",
          "record_display_name",
          "current_payload"
        ]
      }
    }
  },
  "required": [
    "actor_type",
    "actor_id",
    "action",
    "actor_display_name",
    "record_display_name",
    "payloads"
  ]
}