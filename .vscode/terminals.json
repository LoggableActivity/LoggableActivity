{
  "autorun": false,
  "terminals": [
    {
      "name": "Test",
      "focus": true,
      "execute": true,
      "onlySingle": true,
      "icon": "run",
      "commands": [
        "dir=[file] && test_path=${${(s:/spec/:)dir}[1]} && file=\"spec/\"${${(s:/spec/:)dir}[2]}",
        "echo \"$dir\\n$test_path\\n$file:[lineNumber]\"",
        "cd $test_path",
        "rspec $file:[lineNumber]"
      ]
    },
    {
      "name": "Test file",
      "focus": true,
      "execute": true,
      "onlySingle": true,
      "icon": "run-all",
      "commands": [
        "dir=[file] && test_path=${${(s:/spec/:)dir}[1]} && file=\"spec/\"${${(s:/spec/:)dir}[2]}",
        "echo \"$dir\\n$test_path\\n$file\"",
        "cd $test_path",
        "rspec $file"
      ]
    }
  ]
}