<div class="row">
  <div class="col-3">
    <b class="text-secondary"><%= t('loggable_activity.activity.action') %></b>
  </div>
  <div class="col-3">
    <b class="text-secondary"><%= t('loggable_activity.activity.record') %></b>
  </div>
  <div class="col-3">
    <b class="text-secondary"><%= t('loggable_activity.activity.actor') %></b>
  </div>
  <div class="col-3">
    <b class="text-secondary"><%= t('loggable_activity.activity.created_at') %></b>
  </div>
</div>

<% @activities.each do |activity| %>
  <div class="activity activity-info" type="button" data-bs-toggle="collapse" data-bs-target="#activity_<%= activity.id %>" aria-expanded="false" aria-controls="collapseExample">
    <div class="row">
      <div class="col-3">
        <%= activity_action(activity) %>
      </div>
      <div class="col-3">
        <%= activity.record_display_name %>
      </div>
      <div class="col-3">
        <%= activity.actor_display_name %>
      </div>
      <div class="col-3">
        <%= l(activity.created_at, format: :long) %>
      </div>
    </div>
  </div>
  <div class="collapse" id="activity_<%= activity.id %>">
    <pre>
      <code class="language-json">
        <%= format_json_for_display(activity.attrs) %>
      </code>
    </pre>
  </div>
<% end %>

<script>
  Prism.highlightAll();
</script>
